@model IEnumerable<co_sport.ViewModels.GroupViewModel>
@{
    ViewBag.Title = "JoinGroup";
}

<h2>未加入的团体</h2>

<table class="table">
    <tr>
        <th>
            团体名称
        </th>
        <th>
            描述
        </th>
        <th>
            人员数
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("加入", "ApplyForJoining", new { id = item.GroupID })
            </td>
        </tr>
    }
</table>

